{
    "name": "Service-now Auto Assigner",
    "version": "1.0",
    "description": "Assigning jobs in service-now",
    "host_permissions": ["https://*.service-now.com/*"],
    "permissions": ["*://*/*"],
    "content_scripts": [
      {
        "matches": ["https://*.service-now.com/*"],
        "all_frames": true,
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["script.js"],
        "matches": ["https://*.service-now.com/*"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src https://*.service-now.com/* 'self' data:; child-src 'none'; object-src 'none'; connect-src https://*.service-now.com/* ws://127.0.0.1:1978/"
    },
    "action": {
      "default_icon": {
        "16": "ext-icon.png",
        "24": "ext-icon.png",
        "32": "ext-icon.png"
      },
      "default_title": "Service-now Auto Assigner"
    },
    "icons": { 
      "16": "ext-icon.png",
      "48": "ext-icon.png",
      "128": "ext-icon.png" 
    },
    "externally_connectable": {
      "ids": ["alfmonmccdmkhlenponilhikbhmpcncp"],
      "matches": ["https://*.service-now.com/*"],
      "accepts_tls_channel_id": false
    },
    "manifest_version": 3
}